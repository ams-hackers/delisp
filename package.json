{
  "name": "delisp-repo",
  "version": "0.1.0",
  "description": "A delightful Lisp for Javascript",
  "repository": "https://github.com/ams-hackers/delisp.git",
  "license": "MIT",
  "scripts": {
    "build": "tsc --build packages/",
    "lint": "yarn workspaces run lint",
    "prettier": "prettier --write '**/*.ts'",
    "test": "yarn workspaces run test",
    "coveralls": "yarn test --coverage && coveralls -v < packages/delisp-core/coverage/lcov.info"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.5",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "prettier": "^1.15.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true
}
